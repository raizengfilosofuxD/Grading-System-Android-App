<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.windows7.itonatalagalordthankyou.Dashboard">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/bg_teacher"
    >

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"

        android:background="@color/colorPrimaryDark"
           >
        <TextView
            android:textColor="#fff"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Name: "/>
        <TextView
            android:textColor="#fff"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:text="Raizen Sangalang"/>

    </LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="2dp" />
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <Button
        android:paddingRight="10dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_person_add_black_24dp"
        android:layout_width="150dp"
        android:id="@+id/btn_AddMyStudent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:text="Student"/>

    <Space
        android:layout_width="2dp"
        android:layout_height="wrap_content" />

    <Button
        android:paddingRight="10dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_folder_shared_black_24dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:id="@+id/list_stud"
        android:text="LIST"/>

</LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="2dp" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_settings_black_24dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:id="@+id/settings"
            android:text="info"/>
        <Space
            android:layout_width="2dp"
            android:layout_height="wrap_content" />
        <Button
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/btn_Exit"
            android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:text="Logout"/>

    </LinearLayout>












</LinearLayout>
