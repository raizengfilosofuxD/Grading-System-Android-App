<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.windows7.itonatalagalordthankyou.Main2Activity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        tools:context="com.example.windows7.itonatalagalordthankyou.GradeShow">



        <LinearLayout

            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="5.5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textStyle="bold"
                android:paddingRight="10dp"/>
            <TextView
                android:id="@+id/txt_studID"
                android:textSize="5.5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000044818"

                android:paddingRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="5.5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:  "
                android:paddingRight="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_LastName"
                android:textSize="5.5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sangalang "/>
            <TextView
                android:textSize="5.5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "/>
            <TextView
                android:id="@+id/txt_FirstName"
                android:textSize="5.5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingRight="5dp"
                android:text="Raizen John"/>
            <TextView
                android:id="@+id/txt_MiddleName"
                android:textSize="5.5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agapito"/>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="REPORT CARD"/>

        </LinearLayout>


        <LinearLayout

            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="English: "/>
            <EditText
                android:inputType="number"
                android:id="@+id/et_English"
                android:layout_width="1in"

                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mathematics: "/>
            <EditText
                android:inputType="number"
                android:id="@+id/et_Math"
                android:layout_width="1in"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout

            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView

                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Science and Technology: "/>
            <EditText
                android:inputType="number"
                android:id="@+id/et_SciTech"
                android:layout_width="1in"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Social Studies: "/>
            <EditText
                android:inputType="number"
                android:id="@+id/et_SocialScience"
                android:layout_width="1in"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Filipino: "/>
            <EditText
                android:inputType="number"
                android:id="@+id/et_Filipino"
                android:layout_width="1in"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp" />



        <Button

            android:layout_gravity="center"
            android:id="@+id/btn_AddGrade001"
            android:layout_width="1.5in"
            android:text="Add"
            android:textColor="#fff"
            android:layout_height="38dp"
            android:background="@drawable/shapeedit"
            android:backgroundTint="@color/colorPrimary"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="1.5in"
            android:text="DELETE"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_height="38dp"
            android:background="@drawable/shapeedit"
            android:backgroundTint="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>
